  "bugs": {
    "url": "https://github.com/xunzhaotech/oa-ui/issues"
  },
  "homepage": "https://github.com/xunzhaotech/oa-ui#readme",
  "dependencies": {
    "core-js": "^3.6.4",
    "vue": "^2.6.11",
    "vue-router": "^3.1.5"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^4.2.0",
    "@vue/cli-plugin-e2e-nightwatch": "^4.2.0",
    "@vue/cli-plugin-eslint": "^4.2.0",
    "@vue/cli-plugin-router": "^4.2.0",
